<?xml version="1.0" encoding="utf-8" ?>
<Suite RequireVersion="6.0" Title="Video Games" Id="VideoGames" Category="Products &amp; Reviews" SourceUrl="https://github.com/JessicaJeanKoch/Amazon-Video_Games-Scrape/blob/master/VideoGames.xml" HelpUrl="http://seotoolsforexcel.com/amazon/" HelpText="Documentation">

  <Author Name="Jessica Koch" Url=""/>

  <RestConnector Id="Details" Title="Details">
    <Parameters>
      <Text Id="Query" Title="Query" Debug.DefaultValue="football" Required="true"/>
      <Text Id="Domain" Title="Domain" DefaultValue="amazon.com" Required="true"/>
      <Select Id="Department" Title="Department" Required="false" DefaultValue="aps">
        <DataSource>
          <Resource Id="Departments"/>
        </DataSource>
      </Select>
      <Number Id="Delay" Title="Delay" DefaultValue="0" Minimum="0" Maximum="20000" Required="false" HelpText=""/>
    </Parameters>
    <Paging PageSize="15" EvenPages="false"/>
    <Fetch>
      <HttpSettings>
        <IntervalBetweenRequests RandomFrom="@(Model.Delay)" RandomTo="@(Model.Delay+10)" IfSame="Host"/>
      </HttpSettings>
      <Fetch.Url>
        <![CDATA[
        https://www.amazon.com/dp/@(Model.ASIN)
				?th=1
        ]]>
      </Fetch.Url>
    </Fetch>
    <Parse>
      <XPath Id="ItemName" Title="Item Name" Expr="//*[@id='productTitle']" />
      <XPath Id="Price" Title="Price" Expr=".//span[contains(@@class,'-price')]"/>
    </Parse>
  </RestConnector>

</Suite>
